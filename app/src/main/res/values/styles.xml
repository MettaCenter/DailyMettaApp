    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <!--<item name="searchViewStyle">@style/MySearchViewStyle</item>-->
    </style>

    <!-- .Light.DarkActionBar -->

    <!--
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    -->

    <style name="CustomActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@drawable/actionbar_bg</item>
        <item name="titleTextStyle">@style/CustomActionBarText</item>
    </style>

    <style name="CustomActionBarText" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <!-- <item name="android:textColor">#FFFFFF</item> -->
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="MySearchViewStyle" parent="Base.Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/abc_ic_search_api_mtrl_alpha</item>
        <item name="queryBackground">@drawable/charka_wheel_small_2015</item>
        <item name="closeIcon">@drawable/charka_wheel_small_2015</item>
    </style>


